# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
APP_VERSION=1.0.0

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nuri_qa_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password

# PostgreSQL Connection URL (alternative to individual settings)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/nuri_qa_db

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
SESSION_TTL_SECONDS=1800

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Crawler Settings
CRAWLER_INTERVAL_MINUTES=5
CRAWLER_START_URL=https://nuri-platform.com
CRAWLER_MAX_DEPTH=3
CRAWLER_USER_AGENT=NURI-QA-Crawler/1.0

# Embedding Settings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
CHUNK_SIZE_TOKENS=512
CHUNK_OVERLAP_TOKENS=50

# LLM Settings
LLM_MODEL_PRIMARY=gpt-4o-mini
LLM_MODEL_FALLBACK=gpt-4o
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
SECRET_KEY=your-secret-key-for-jwt-signing-change-this-in-production
